<%- model_class = Sms.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:isflash) %></th>
      <th><%= model_class.human_attribute_name(:pl) %></th>
      <th><%= model_class.human_attribute_name(:globalid) %></th>
      <th><%= model_class.human_attribute_name(:localid) %></th>
      <th><%= model_class.human_attribute_name(:status_id) %></th>
      <th><%= model_class.human_attribute_name(:ok) %></th>
      <th><%= model_class.human_attribute_name(:sent) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sms.each do |sms| %>
      <tr>
        <td><%= link_to sms.id, sms_path(sms) %></td>
        <td><%= sms.phone %></td>
        <td><%= sms.subject %></td>
        <td><%= sms.content %></td>
        <td><%= sms.isflash %></td>
        <td><%= sms.pl %></td>
        <td><%= sms.globalid %></td>
        <td><%= sms.localid %></td>
        <td><%= sms.status_id %></td>
        <td><%= sms.ok %></td>
        <td><%= sms.sent %></td>
        <td><%=l sms.created_at %></td>
        <td>
          <% unless sms.sent? %><%= link_to t('.send', :default => t("helpers.links.send")),
                      send_message_path(sms), :class => 'btn btn-mini btn-warning' %>
          <% else %>
              <%= link_to t('.request_status', :default => t("helpers.links.request_status")),
                                  request_status_path(sms), :class => 'btn btn-mini btn-primary' %>
          <% end %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sms_path(sms), :class => 'btn btn-mini' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      sms_path(sms), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sms_path(sms),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sms_path,
            :class => 'btn btn-primary' %>
