<%= form_for @sms, :html => { :class => 'form-horizontal' } do |f| %>
  <%= errors_for(@sms, "Can't create SMS.").html_safe %>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :isflash, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :isflash, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pl, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :pl, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn' %>
  </div>
<% end %>
